<a class="btn btn-info" href="/category/add">Add new category</a>
<a class="btn btn-danger" href="/category/deleteall">Delete all</a>
<br><br>
<form class="col-md-4" action="/category/search" method="post">
   <input class="form-control" type="search" name="keyword" id="" required placeholder="Search by category name">
</form>
<br><br>
<table class="table table-secondary">
   <tr>
      <th>Category name</th>
      <th colspan="2">Menu</th>
   </tr>
   {{#each categories }}
   <tr>
      <td>
         <a href="/category/detail/{{ _id }}">
            {{ name }}
         </a>
      </td>
      <td>
         <a class="btn btn-warning" href="/category/edit/{{ _id }}">Edit</a>
      </td>
      <td>
         <a class="btn btn-danger" href="/category/delete/{{ _id }}"
            onclick="return confirm('Are you sure to delete this category ?');">Delete</a>
      </td>
   </tr>
   {{/each}}
</table>