<a class="btn btn-info" href="/material/add">Add new material</a>
<a class="btn btn-danger" href="/material/deleteall">Delete all</a>
<br><br>
<form class="col-md-4" action="/material/search" method="post">
   <input class="form-control" type="search" name="keyword" id="" required placeholder="Search by material name">
</form>
<br><br>
<table class="table table-secondary">
   <tr>
      <th>Material name</th>
      <th colspan="2">Menu</th>
   </tr>
   {{#each materials }}
   <tr>
      <td>
         <a href="/material/detail/{{ _id }}">
            {{ name }}
         </a>
      </td>
      <td>
         <a class="btn btn-warning" href="/material/edit/{{ _id }}">Edit</a>
      </td>
      <td>
         <a class="btn btn-danger" href="/material/delete/{{ _id }}"
            onclick="return confirm('Are you sure to delete this material ?');">Delete</a>
      </td>
   </tr>
   {{/each}}
</table>